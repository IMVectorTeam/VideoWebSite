<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.niit.mapper.AdministratorMapper">

  	<resultMap type="com.niit.entity.Administrator"  id="administratorMap">
		<id property="id" column="AID" />
		<result property="name" column="AName" />
		<result property="password" column="APwd" />
		<result property="sex" column="ASex" />
		<result property="email" column="AEmail" />
	</resultMap>
	
<!-- 查看个人信息 -->
    <select id="getAdministrator" parameterType="java.lang.String" resultMap="administratorMap"
		resultType="com.niit.entity.Administrator">
		SELECT *
		FROM administrators
		WHERE AID = #{id}
	</select>

<!-- 更新用户信息 -->
	<update id="updateAdministrator" parameterType="com.niit.entity.Administrator">
		UPDATE Administrators
		SET
		AName = #{name},
		APwd = #{password},
		ASex = #{sex},
		AEmail = #{email}
		WHERE AID = #{id}
	</update>
 
</mapper>